<%- include('partials/top.ejs') %>
<div class="container register mt-3">
	<div class="row">
		<div class="col-md-6 box"></div>
		<div class="col-md-6 register-form">
			<div class="box text-center"><h2>LOGIN</h2></div>
			<form action="/auth/login" class="box" method="post">
				<input class="form-control mb-3" type="email" placeholder="Email" name="email" />
				<input class="form-control mb-3" type="password" placeholder="Password" name="password" />
				<button class="form-control btn btn-primary">Login</button>
			</form>
			<div class="box text-center">
				<p>Don't have account?</p>
				<a href="/register">Click here to Register</a>
			</div>
		</div>
	</div>
</div>
<%- include('partials/bottom.ejs') %>
